    <script>
         function calcoloUSD() {

            let euro=0;
            let USD=0;
            euro=document.getElementById("dato1").value;
            USD= euro*(1/1,06595)
            alert("Gli euro inseriti equivalgono: "+USD,"");


         }

                function calcoloAUD() {

                let euro=0;
                let AUD=0;
                 euro=document.getElementById("dato1").value;
                 AUD= euro*(1/1,57554)

                 alert("Gli euro inseriti equivalgono: "+AUD,"");


                 }

            
